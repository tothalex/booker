<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.Shadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/9.0.4" xmlns:fx="http://javafx.com/fxml/1" fx:controller="inf.unideb.hu.Controller">
   <children>
      <AnchorPane prefHeight="400.0" prefWidth="180.0" style="-fx-background-color: #1D2026;">
         <children>
            <JFXButton fx:id="btnTimer" focusTraversable="false" layoutY="50.0" onAction="#btnTimer" prefHeight="52.0" prefWidth="180.0" styleClass="btnMenu" text="Timer" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="btnView" focusTraversable="false" layoutY="120.0" onAction="#btnView" prefHeight="52.0" prefWidth="180.0" styleClass="btnMenu" text="View" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="btnUtilities" focusTraversable="false" layoutY="190.0" onAction="#btnUtilities" prefHeight="52.0" prefWidth="180.0" styleClass="btnMenu" text="Email" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </JFXButton>
         </children></AnchorPane>
      <JFXButton fx:id="btnExit" buttonType="RAISED" focusTraversable="false" layoutX="717.0" onAction="#btnExit" text="X" textOverrun="CLIP">
         <font>
            <Font size="16.0" />
         </font>
         <effect>
            <Shadow />
         </effect>
      </JFXButton>
      <AnchorPane layoutX="180.0" layoutY="32.0" prefHeight="197.0" prefWidth="471.0">
         <children>
            <Pane fx:id="paneUtilities" prefHeight="368.0" prefWidth="563.0" visible="false">
               <children>
                  <JFXTextField fx:id="textfieldFrom" focusColor="#1d2026" focusTraversable="false" layoutX="14.0" layoutY="103.0" prefHeight="29.0" prefWidth="250.0" promptText="from(gmail only):">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </JFXTextField>
                  <JFXPasswordField fx:id="passfieldGMAIL" focusColor="#1d2026" layoutX="14.0" layoutY="170.0" prefHeight="29.0" prefWidth="250.0" promptText="password:">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </JFXPasswordField>
                  <JFXTextField fx:id="textfieldTo" focusColor="#1d2026" focusTraversable="false" layoutX="14.0" layoutY="237.0" prefHeight="28.0" prefWidth="250.0" promptText="to:">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </JFXTextField>
                  <JFXButton fx:id="btnSend" focusTraversable="false" layoutX="282.0" layoutY="92.0" onAction="#btnSend" prefHeight="52.0" prefWidth="180.0" styleClass="btnMenu" text="Send">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </JFXButton>
                  <Label layoutX="327.0" layoutY="153.0" prefHeight="17.0" prefWidth="90.0" text="(send as csv)" />
                  <Label fx:id="labelSent" focusTraversable="false" layoutX="347.0" layoutY="199.0" prefHeight="20.0" prefWidth="51.0" text="Sent!" textFill="#00ff8b" visible="false">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Label fx:id="labelFailed" focusTraversable="false" layoutX="334.0" layoutY="199.0" prefHeight="20.0" prefWidth="51.0" text="Failed!" textFill="RED" visible="false">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
               </children></Pane>
            <Pane fx:id="paneTimer" prefHeight="368.0" prefWidth="563.0" visible="false">
               <children>
                  <JFXButton fx:id="btnStart" focusTraversable="false" layoutX="100.0" layoutY="35.0" onAction="#btnStart" text="Start">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </JFXButton>
                  <JFXButton fx:id="btnStop" focusTraversable="false" layoutX="355.0" layoutY="35.0" onAction="#btnStop" text="Stop">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </JFXButton>
                  <JFXTextField fx:id="textfieldStopWatch" editable="false" focusColor="#1d2026" focusTraversable="false" layoutX="215.0" layoutY="150.0" prefHeight="26.0" prefWidth="90.0" text="00h:00m">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </JFXTextField>
                  <JFXTextArea fx:id="textareaComment" focusColor="#1d2026" layoutX="14.0" layoutY="222.0" prefHeight="132.0" prefWidth="428.0" />
                  <JFXButton fx:id="btnComment" focusTraversable="false" layoutX="442.0" layoutY="222.0" onAction="#btnComment" text="Comment">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </JFXButton>
                  <Label fx:id="labelStartPressed" focusTraversable="false" layoutX="115.0" layoutY="105.0" text="Start button has been already pressed!" textFill="RED" visible="false">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Label fx:id="labelStartnPressed" focusTraversable="false" layoutX="115.0" layoutY="105.0" text="Start button has not been pressed!" textFill="RED" visible="false">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Label fx:id="labelrun" focusTraversable="false" layoutX="216.0" layoutY="105.0" text="RUNNING..." textFill="#00ff8b" visible="false">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
               </children>
            </Pane>
            <Pane fx:id="paneView" prefHeight="368.0" prefWidth="563.0" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
